@model shop

<form asp-action="AddKey" asp-controller="Home">
    <div class="form-group">
        <label asp-for="Name">говно</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Keys">дерьмо</label>
        <input asp-for="Keys" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">залупа</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Shop</button>
</form>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in ViewBag.data)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
        </tr>
    }
    </tbody>
</table>